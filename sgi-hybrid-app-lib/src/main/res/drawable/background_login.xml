<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >   
<item>
    <shape>
        <gradient android:startColor="#4682B4"
            android:centerColor="#005f8b" android:endColor="#005f8b"
            android:angle="270" android:centerX="0.5" android:centerY="0.5" />       
        <stroke android:color="#dbdbdb" android:width="0dp"/>
        <corners android:radius="0dp"/>
        <padding android:left="0dp" android:top="0dp" android:right="0dp"
            android:bottom="0dp" />
    </shape>
</item>

<item android:state_pressed="true">
    <shape>
        <gradient android:startColor="#B0C4DE"
            android:centerColor="#483D8B" android:endColor="#4682B4"
            android:angle="270" android:centerX="0.5" android:centerY="0.5" />       
        <stroke android:color="#778899" android:width="0dp"/>
        <padding android:left="0dp" android:top="0dp" android:right="0dp"
            android:bottom="0dp" />
    </shape>
</item>
        
   
</selector>